{
  "name": "vscode-void",
  "displayName": "Void: Privacy Curtain",
  "description": "Securely blur sensitive information (API keys, tokens, .env files) in your editor.",
  "version": "0.0.5",
  "publisher": "koleajeolayinka",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/koleajeolayinka/vscode-void.git"
  },
  "categories": [
    "Other",
    "Security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "void.toggle",
        "title": "Void: Toggle Privacy Mode",
        "icon": "$(eye)"
      },
      {
        "command": "void.copySecret",
        "title": "Copy Secret to Clipboard",
        "enablement": "false"
      }
    ],
    "configuration": {
      "title": "Void Configuration",
      "properties": {
        "void.blurMode": {
          "type": "string",
          "enum": [
            "secrets",
            "all"
          ],
          "default": "secrets",
          "description": "Choose 'all' to blur the entire file, or 'secrets' to hide only sensitive values (keeping keys visible)."
        },
        "void.excludedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.md",
            "**/*.txt",
            "**/package-lock.json",
            "**/yarn.lock",
            "**/.git/**/*"
          ],
          "description": "Glob patterns for files that should NEVER be blurred (e.g., documentation, lock files)."
        },
        "void.filesToScan": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.env*",
            "**/*.json",
            "**/*.yaml",
            "**/*.yml",
            "**/*.xml",
            "**/*.config"
          ],
          "description": "Glob patterns for files that should be protected when in 'secrets' mode."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}